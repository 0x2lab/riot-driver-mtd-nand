config MODULE_NAND_ONFI
    bool "ONFI NAND"
    depends on HAS_PERIPH_GPIO
    depends on TEST_KCONFIG
    select MODULE_PERIPH_GPIO
    select MODULE_ZTIMER
    select ZTIMER_USEC
    select MODULE_FMT

config HAVE_NAND_ONFI
    bool
    help
      Indicates that a ONFI NAND is present.
